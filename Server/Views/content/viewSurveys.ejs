<div class="container">
    

    <div class="row">
        <div class="col">
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Number</th>
                        <th scope="col">Email</th>
                        <th scope="col">Update/Delete</th>
                        
                    </tr>
                </thead>
                <tbody id="contactList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < contacts.length; count++) { %>
                        <!-- Create a new Table Row-->
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= contacts[count].Name %></td>
                            <td><%= contacts[count].Number %></td>
                            <td><%= contacts[count].Email %></td>  

                            <td><a href="/contact-list/updateview/<%= contacts[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Update</a>
                               
                                   
                            <!--https://getbootstrap.com/docs/5.2/components/modal/-->
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal<%= count %>">
                                <i class="fas fa-trash-alt"></i> DELETE
                            </button>
                            
                            <!-- Modal -->
                            <!--Important, ids must be unique to ensure the correct record is deleted (count concatenated to end of id)-->
                            <div class="modal fade" id="exampleModal<%= count %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Are you sure you wish to delete <%= contacts[count].Name %>?</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        This action cannot be undone.
                                    </div>
                                    <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <a href="/contact-list/delete/<%= contacts[count]._id %>" class="btn btn-danger">
                                        <i class="fas fa-trash-alt"></i> Delete</a>
                                                                               
                                    </div>
                                </div>
                                </div>
                            </div>


                                    
                            </td>
                            
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>