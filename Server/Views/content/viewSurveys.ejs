<div class="container">
    

    <div class="row">
        <div class="col">
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Survey Name</th>
                        <th scope="col">Start Date</th>
                        <th scope="col">End Date</th>   
                        <th scope="col">Answer Survey</th>                      
                        
                    </tr>
                </thead>
                <tbody id="surveyList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < surveys.length; count++) { %>
                        <!-- Create a new Table Row-->
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= surveys[count].surveyName %></td>
                            <td><%= surveys[count].startDate %></td>
                            <td><%= surveys[count].endDate %></td>  

                            <td><a href="/viewSurveys/answerSurvey/<%= surveys[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Answer Survey</a>
                               
 
                            </td>
                            
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>